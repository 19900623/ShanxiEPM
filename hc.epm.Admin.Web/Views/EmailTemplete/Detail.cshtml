@using hc.Plat.Common.Extend;
@using hc.epm.Common;
@using hc.epm.DataModel.Msg
@using System.Collections.Generic;
@model Msg_EmailTemplete

@{
    ViewBag.Title = "Detail";
}

<div class="form-wrap" style="min-height: 500px;position: relative;">
    <table class="layui-table" style="width:80%;margin:0 auto;margin-top:20px;table-layout: fixed">
        <tbody>
            <tr>
                <td style="text-align:right;width:25%;">模版</td>
                <td style="text-align:left;width:75%;">@Model.No</td>
            </tr>
            <tr>
                <td style="text-align:right">模版名称</td>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <td style="text-align:right">邮件适用环节</td>
                <td>@(Model.Step.ToEnumReq<MessageStep>().GetText())</td>
            </tr>
            <tr>
                <td style="text-align:right">模板标题内容</td>
                <td style="word-break: break-all">@Model.TitleCon</td>
            </tr>
            <tr>
                <td style="text-align:right">邮件模板内容</td>
                <td style="word-break: break-all">@Model.TemplateCon</td>
            </tr>
            <tr>
                <td style="text-align:right">邮件参数说明</td>
                <td style="word-break: break-all">@Model.ParameterDes</td>
            </tr>
            <tr>
                <td style="text-align:right">启用/禁用</td>
                <td>@(Model.IsEnable == true ? "启用" : "禁用")</td>
            </tr>
            <tr>
                <td style="text-align:right">确认状态</td>
                <td>@(Model.IsConfirm == true ? "已确认" : "未确认")</td>
            </tr>

        </tbody>
    </table>
    <div class="layui-form-item row btn-save" style="position: absolute;">
        <input type="button" name="close" value="关&nbsp;&nbsp;&nbsp;闭" class="layui-btn layui-btn-small button-base bg-cancel cancel" />
    </div>
</div>
<script>
    layui.use(['layer', 'form', 'element'], function () {
        var layer = layui.layer, form = layui.form, element = layui.element;
        //关闭弹出iframe层
        $('.cancel').on("click", function () {
            var index = parent.layer.getFrameIndex(window.name); //获取窗口索引
            parent.layer.close(index);//关闭窗口
        });
    });

</script>