@model Epm_SignInformation
@{
    ViewBag.Title = "考勤记录详情";
}
<div class="container">
    <div class="row">
        <form class="form-horizontal " id="mainForm">
            <div class="col-lg-12 col-sm-12" style="height:60px">
                <div class="form-group">
                    <label class="col-lg-2 col-sm-2 control-label"><em class="required"></em>用户名称 : </label>
                    <div class="col-lg-3 col-sm-3">
                        <input type="text" class="form-control" value="@Model.userName" disabled />
                        <input type="hidden" value="@Model.userId" id="UserId" />
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-sm-12" style="height:60px">
                <div class="form-group">
                    <label class="col-lg-2 col-sm-2 control-label"><em class="required"></em>项目名称 : </label>
                    <div class="col-lg-3 col-sm-3">
                        <input type="text" class="form-control" value="@Model.projectName" disabled />
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-sm-12">
                <div class="form-group">
                    <label class="col-lg-2 col-sm-2 control-label"><em class="required"></em>加油站名称：</label>
                    <div class="col-lg-6 col-sm-6">
                        <input type="text" class="form-control" value="@Model.gasstationName" disabled />
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-sm-12" style="height:60px">
                <div class="form-group">
                    <label class="col-lg-2 col-sm-2 control-label"><em class="required"></em>岗位信息 : </label>
                    <div class="col-lg-3 col-sm-3">
                        <input type="text" class="form-control" value="@Model.jobInfo" disabled />
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-sm-12">
                <div class="form-group">
                    <label class="col-lg-2 col-sm-2 control-label"><em class="required"></em>人脸照片：</label>
                    <div class="col-lg-6 col-sm-6">
                        <img src="@(Model==null?"":Model.picStrength)" style='width: 200px;height: 200px;cursor: pointer;' />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script>

    layui.use(['layer', 'form', 'element'], function () {
        var layer = layui.layer, form = layui.form, element = layui.element, laypage = layui.laypage;
        //关闭弹出iframe层
        $('.cancel').on("click", function () {
            var index = parent.layer.getFrameIndex(window.name); //获取窗口索引
            parent.layer.close(index);//关闭窗口
        });
    });
</script>

