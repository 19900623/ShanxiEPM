                    return;
                })
            }
        });

        //驳回
        $(".Reject").click(function () {
            var id = '@Model.Id';
            var state = "ApprFailure";
            parent.layer.prompt({
                formType: 2,
                value: '',
                title: '请输入驳回理由'
            }, function (value, index, elem) {
