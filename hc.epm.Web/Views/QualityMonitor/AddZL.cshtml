                        <thead>
                            <tr>
                                <th width="100">问题</th>
                                <th width="30">整改单位</th>
                                <th width="30">要求完成日期</th>
                                <th width="30">操作</th>
                            </tr>
                        </thead>
                        <tbody class="unit"></tbody>
                    </table>
                    <input type="hidden" name="work" id="work" value="" />
