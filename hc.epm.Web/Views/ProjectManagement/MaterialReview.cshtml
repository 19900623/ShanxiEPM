        <div class="module-div">
            <h4>负责人</h4>
            <table class="datalist" style="word-break:break-all;word-wrap:break-word;margin-top:10px;">
                <tbody>
                    <tr>
                        <td class="table_title">地市项目负责人</td>
                        <td class="td-div">
                            <div class="form-group">
                                <input class="form-control" type="text" id="" name="" data-unitid="" style="display:inline-block;width:80%" disabled/>
                                <input type="button" id="CityPro1" class="btn form-control" style="position: relative; z-index: 1;width: 60px;font-size: 16px; background-color:#c3c3c3!important;color:white;" value="选择" />
                                <input class="form-control" type="hidden" id="" name="" />
                            </div>
                        </td>
                        <td class="table_title">地市项目决策人</td>
                        <td class="td-div">
                            <div class="form-group">
                                <input class="form-control" type="text" id="" name="" data-unitid="" style="display:inline-block;width:80%" disabled/>
                                <input type="button" id="CityPro2" class="btn form-control" style="position: relative; z-index: 1;width: 60px;font-size: 16px; background-color:#c3c3c3!important;color:white;" value="选择" />
                                <input class="form-control" type="hidden" id="" name="" />
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td class="table_title">编写负责人</td>
                        <td class="td-div">
                            <div class="form-group">
                                <input class="form-control" type="text" id="" name="" data-unitid="" style="display:inline-block;width:80%" disabled/>
                                <input type="button" id="Redact" class="btn form-control" style="position: relative; z-index: 1;width: 60px;font-size: 16px; background-color:#c3c3c3!important;color:white;" value="选择" />
