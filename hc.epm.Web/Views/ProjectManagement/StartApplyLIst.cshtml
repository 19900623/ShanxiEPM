                    <td>暂存</td>
                    <td>常超超</td>
                    <td>
                        <a href="/ProjectManagement/StartApplyEdit">继续申请</a>
                        <a href="/ProjectManagement/StartApplyDetail">查看</a>
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>咸阳统一路加油站项目改建开工申请</td>
                    <td>公司机关</td>
                    <td>2019-01-01  ~  2019-12-31</td>
                    <td>365</td>
                    <td>2019-10-22</td>
                    <td>待审批</td>
                    <td>常超超</td>
                    <td>
                        <a href="/ProjectManagement/StartApplyDetail">查看</a>
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>咸阳统一路加油站项目改建开工申请</td>
                    <td>公司机关</td>
                    <td>2019-01-01  ~  2019-12-31</td>
                    <td>365</td>
                    <td>2019-10-22</td>
                    <td>已驳回</td>
                    <td>常超超</td>
                    <td>
                        <a href="/ProjectManagement/StartApplyEdit">重新申请</a>
                        <a href="/ProjectManagement/StartApplyDetail">查看</a>
                        <a>关闭</a>
                    </td>
                </tr>
            </tbody>

        </table>
    </div>
    <div id="page" style="text-align:right; margin-right:5px;"></div>
</div>

<script>
    $("#add").click(function () {
        window.location.href = "/ProjectManagement/StartApply";
    })
</script>