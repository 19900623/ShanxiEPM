                        layer.alert("物料名称不能为空", { icon: 2 });
                        IsTrue = true;
                        return;
                    } else if (Name.length>100) {
                        layer.alert("物料名称长度不能大于100个字符", { icon: 2 });
                        IsTrue = true;
                        return;
                    }
