                        layer.alert("物料型号不能为空", { icon: 2 });
                        IsTrue = true;
                        return;
                    } else if (Model.length > 100) {
                        layer.alert("物料型号长度不能大于100个字符", { icon: 2 });
                        IsTrue = true;
                        return;
                    }
                    if (!Qty || Qty < 0) {
                        layer.alert("物料数量只能为正数且不能为空", { icon: 2 });
                        IsTrue = true;
                        return;
                    }
                    if (!Unit) {
                        layer.alert("物料单位不能为空", { icon: 2 });
