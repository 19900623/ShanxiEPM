                    <input type="hidden" name="CityCode" id="CityCode" class="CityCode" value="" />
                </td>
                @*区县*@
                <td>
                    <div class="form-group">
                        <input class="form-control County" type="text" name="County" value="" autocomplete="off" />
                    </div>
                </td>
                @*项目名称*@
                <td>
                    <div class="form-group">
