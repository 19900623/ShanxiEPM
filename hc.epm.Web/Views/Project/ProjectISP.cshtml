        });
        $(".btnSelect").click(function () {
            if ($(this).parents("tr").find(".ISPName").text() == "") {
                layer.alert("请设置服务商", { icon: 2 });
                return;
            }
            var type = "";
            if ($(this).attr("type") == 3) {
                type = 3
            } else if ($(this).attr("type") == 1) {
                type = 1
            }
            var CompanyId = $(this).parents("tr").find(".ISPId").text();
            var that = $(this);
