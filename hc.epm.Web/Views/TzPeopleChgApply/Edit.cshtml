        <div class="module-div">
            <h4>签字意见</h4>
            <table class="datalist" style="word-break:break-all;word-wrap:break-word;margin-top:10px;">
                <tbody>
                    <tr>
                        <td colspan="4">
                            <script type="text/plain" id="editor" style="width:100%;height:200px;">
                                @Html.Raw(Model.SignIdea)
                            </script>
