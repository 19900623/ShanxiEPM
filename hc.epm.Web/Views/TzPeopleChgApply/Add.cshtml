                                <input type="text" name="DepLeaderName" id="DepLeaderName" class="form-control" value="" style="display:inline-block;width:66%;" placeholder="" readonly/>

                                <input type="hidden" name="DepLeaderId" id="DepLeaderId" />
                                <div class="btn-upload">
