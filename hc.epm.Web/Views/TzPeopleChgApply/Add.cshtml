                    <tr>
                        <td class="table_title">
                            <span class="font-black">申请部门</span>
                        </td>
                        <td class="td-div">
                            <span>@ViewBag.CompanyName</span>
                            <span>@ViewBag.Department</span>
                            <input type="hidden" name="CompanyName" value="@ViewBag.CompanyName" />
                            <input type="hidden" name="CompanyId" value="@ViewBag.CompanyId" />
                            <input type="hidden" name="Department" value="@ViewBag.Department" />
                            <input type="hidden" name="DepartmentID" value="@ViewBag.DepartmentID" />
                        </td>
                        <td class="table_title">
                            <span class="font-black">申请时间</span>
                        </td>
                        <td class="td-div">
                            <div>@(Convert.ToDateTime(ViewBag.ApplyDate).ToString("yyyy-MM-dd"))</div>
                            <input type="hidden" name="ApplyDate" value="@(Convert.ToDateTime(ViewBag.ApplyDate).ToString("yyyy-MM-dd"))" />
                        </td>
                    </tr>
                    <tr>
                        <td class="table_title">
                            <span class="font-black">项目名称</span>
                        </td>
                        <td class="td-div" colspan="3">
                            <div class="form-group">
                                <input type="text" name="ProjectName" id="ProjectName" class="form-control" style="display:inline-block;width:88%;" placeholder="请选择项目" readonly/>
                                <input type="hidden" name="ProjectId" id="ProjectId" />
                                <div class="btn-upload">
                                    <input type="button" id="selproject" class="btn" style="position: relative; z-index: 1;width: 100px;font-size: 16px;" value="选择项目" />
                                </div>
                            </div>
                        </td>

                    </tr>
                    <tr>
                        <td class="table_title">
                            <span class="font-black">建设地址</span>
                        </td>
                        <td class="td-div" colspan="3">
                            <div class="form-group">
                                <input id="ConstructionAddress" type="text" name="ConstructionAddress" class="form-control"  placeholder="" />
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td class="table_title">
                            <span class="font-black">施工（监理）单位</span>
                        </td>
                        <td class="td-div">
                            <div class="form-group">
                                <input type="text" name="WorkUnit" id="WorkUnit" class="form-control" style="display:inline-block;width:66%;" placeholder="" readonly/>

                                <input type="hidden" name="WorkUnitId" id="WorkUnitId" />
                                <div class="btn-upload">
                                    <input type="button" id="selectCompany" class="btn" style="position: relative; z-index: 1;width: 100px;font-size: 16px;" value="选择单位" />
                                </div>
                            </div>
                        </td>
                        <td class="table_title">
                            <span class="font-black">负责人</span>
                        </td>
                        <td class="td-div">
                            <div class="form-group">
                                <input type="text" name="Leader" id="Leader" class="form-control" />
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="module-div">
            <h4>人员变更情况</h4>
            <table class="datalist" style="word-break:break-all;word-wrap:break-word;margin-top:10px;">
                <tbody>
                    <tr style="text-align:right;height:20px;">
                        <td colspan="4" class="tab-icon">
                            <i class="layui-icon tab-add" title="添加" style="color:darkseagreen">&#xe608;</i>
                            <i class="layui-icon tab-delete" title="删除" style="color:cornflowerblue">&#xe640;</i>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="4">
                            <table class="fr-ta" style="word-break:break-all;word-wrap:break-word;">
                                <thead>
                                    <tr class="ou-ta">
                                        <th>
                                            <div style="width:20px;"><input type="checkbox" id="allcheck" /></div>
                                        </th>
                                        <th><div style="width:40px;">序号</div></th>
                                        <th><div>变更岗位</div></th>
                                        <th><div>变更前人员</div></th>
                                        <th><div style="width:200px;">变更前职业证书名称</div></th>
                                        <th><div>变更后人员</div></th>
