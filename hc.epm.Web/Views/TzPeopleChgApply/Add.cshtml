<div class="contentData">
    <form class="form-horizontal" id="mainForm">
        <div class="module-div">
            <h4>基础信息</h4>
            <table class="datalist" style="word-break:break-all;word-wrap:break-word;margin-top:10px;">
                <tbody>
                    <tr>
                        <td class="table_title">
                            <span class="font-black">标题</span>
                        </td>
                        <td class="td-div">
                            <span>@ViewBag.Title</span>
                            <input id="" type="hidden" name="Title" value="@ViewBag.Title" />
                        </td>
                        <td class="table_title">
                            <span class="font-black">申请人</span>
                        </td>
                        <td class="td-div">
                            <span>@ViewBag.Applicant</span>
                            <input type="hidden" name="Applicant" value="@ViewBag.Applicant" />
                            <input type="hidden" name="ApplicantID" value="@ViewBag.ApplicantID" />
