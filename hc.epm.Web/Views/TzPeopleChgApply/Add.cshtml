                        <td class="table_title">
                            <span class="font-black">分管领导</span>
                        </td>
                        <td class="td-div">
                            <div class="form-group">
                                <input type="text" name="LeaderName" id="LeaderName" class="form-control" value="" style="display:inline-block;width:66%;" placeholder="" readonly/>

                                <input type="hidden" name="LeaderId" id="LeaderId" />
                                <div class="btn-upload">
                                    <input type="button" data-type="2" class="btn selectUser" style="position: relative; z-index: 1;width: 100px;font-size: 16px;" value="选择领导" />
                                </div>
