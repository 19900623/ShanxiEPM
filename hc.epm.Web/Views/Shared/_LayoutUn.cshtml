    <!--upload end-->
    @using hc.Plat.Common.Global;
    @using hc.epm.ViewModel;
    @{
        var userInfo = Session[ConstStr_Session.CurrentUserEntity] as UserView;
        var username = userInfo == null ? "noLogin" : userInfo.UserName;
    }
</head>
<body>
    <div class="head">
        <div class="subhead">
            <div class="subheadRight">
                @if (userInfo == null)
                {
                    <p>请>@Html.ActionLink("登录", "Login", "Currency") &nbsp;&nbsp;/</p>
                    <p>您好，游客！ 欢迎来到【投资工程管理系统】</p>
                }
                else {
                    <p>@Html.ActionLink("注销", "LogOut", "Currency") &nbsp;&nbsp;/</p>
                    <p>您好 @username 欢迎来到【投资工程管理系统】</p>
                }
            </div>
            @*<div class="subheadLeft" id="subheadLeft">
                <input type="text" placeholder="请选择项目" onfocus="this.placeholder = ''" onblur="this.placeholder = '请选择项目'" readonly="readonly" /><a href=""><img src="~/Resource/images/headimg.jpg" /></a>
                <div class="selectProject" id="selectProject" style="display:none">
                </div>
            </div>*@

        </div>
    </div>
    @Html.Partial("_TopMenu")
    @RenderBody()
    @Html.Partial("_footer")
</body>
</html>